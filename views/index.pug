extends layout
block content
  head
    meta(charset='utf-8')
    title homeboi
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='stylesheets/style.css')
    .navigation
      a(href='http://localhost:3000/home') Home
      
  body
    .container
      form
        ul.wrapper
          li.form-row
            label(for='name') Name
            input#name(type='text')
          li.form-row
            label(for='email') Email Address
            input#email(type='email')
          li.form-row
            button(type='submit') Submit
  footer
    .bottom-container
      .row
        .col
          .a(href='#' style='color:white') Sign up
        .col
          .a(href='#' style='color:white') Forgot password?
