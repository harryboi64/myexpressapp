extends layout
block content
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet' href='stylesheets/style.css')
    .navigation
      a(href='http://localhost:3000/myprofile') My Profile
      a(href='http://localhost:3000/post') Post
      a(href='http://localhost:3000/') Login/Create Account
      a(href='http://localhost:3000/signup') Signup
    body
        form(action='/login' method='POST')
            input(type='text' name='username' placeholder='username')
            input(type='password' name='password' placeholder='password')
            button login
    footer
    .bottom-container
      .row
        .col
          .a(href='#' style='color:white') Sign up
        .col
          a(href='#' style='color:white') Forgot password?
  